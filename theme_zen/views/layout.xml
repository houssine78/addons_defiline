          </tr>
          <tr>
                <td style="border-bottom: 1px solid #ff7f00;"></td>
          </tr>
          <tr>
                <td style="text-align:left; vertical-align:top;padding-top:5px;padding-left:15px;">
                	<span>Experts - comptables</span>
                </td>
          </tr>
                        
     </table>

</template>

	  
<template id="theme_zen.invoice_layout">
    <!-- Multicompany -->
    <t t-if="o and 'company_id' in o">
        <t t-set="company" t-value="o.company_id"></t>
    </t>
    <t t-if="not o or not 'company_id' in o">
        <t t-set="company" t-value="res_company"></t>
    </t>
    
    <t t-raw="0" />
    <t t-call="theme_zen.invoice_footer" />
</template>

